PACKAGE_NAME=ccache
VER=4.12.2
URL="https://github.com/ccache/ccache/releases/download/v${VER}"
EXT=tar.xz
#build depends on
. ../settings

pkg_configure() {
    local_copy
}

pkg_build() {
   cd build
   cmake .  
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
    cd build
    cmake --install . --prefix ${PREFIX}
	if [ "$?" = "0" ]
	then
		mkdir ${PREFIX}/links
		${LN_SF} ${PREFIX}/bin/ccache ${PREFIX}/links/gcc 
		${LN_SF} ${PREFIX}/bin/ccache ${PREFIX}/links/g++
        pkg_install_bin_all 
	else
		exit 1
	fi
}
