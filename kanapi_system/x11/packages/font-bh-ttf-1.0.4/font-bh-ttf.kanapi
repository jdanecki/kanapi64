PACKAGE_NAME=font-bh-ttf
VER=1.0.4
URL="https://www.x.org/releases/individual/font"
EXT=tar.xz
#build depends on
export DONT_INSTALL_INCLUDE=1
. ../settings

pkg_configure() {
    echo "nothing to do"
}

pkg_build() {
	echo "nothing todo"
}

pkg_install() {
	mkdir -p ${PREFIX}/ttf
	mkdir -p ${PREFIX}/fontconfig
	cp -arv ${PACKAGE_SRCDIR}/*.ttf ${PREFIX}/ttf
	cp -arv ${PACKAGE_SRCDIR}/*.conf ${PREFIX}/fontconfig
	ln -svf ${PREFIX}/ttf/*.ttf ${KANAPI_BASE}/fontconfig-${fontconfig_ver}/share/fonts
	ln -svf ${PREFIX}/fontconfig/*.conf ${KANAPI_BASE}/fontconfig-${fontconfig_ver}/etc/fonts/conf.d
	fc-cache -v
}

