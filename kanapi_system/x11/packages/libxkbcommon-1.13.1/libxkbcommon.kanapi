PACKAGE_NAME=libxkbcommon
VER=1.13.1
URL="https://github.com/xkbcommon/libxkbcommon/archive/refs/tags"
EXT=tar.gz
#build depends on
. ../settings

pkg_download() {
	PACKAGE_PATH=xkbcommon-${VER}.${EXT}
	pkg_curl
}

pkg_prepare() {
	if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ] 
	then 
		echo "$PACKAGE_NAME: already prepared"
	else
		pkg_tar_gz		
		/bin/date > ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
	fi
	${LN_SNF} ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}-xkbcommon-${VER} ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}-${VER}
}

pkg_configure() {
    if [ -d build ] ; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Denable-wayland=false
}

pkg_build() {
    meson compile -C build
}

pkg_install() {
	meson install -C build && pkg_install_pc_all_only && pkg_install_libs && pkg_install_bin_all
}

