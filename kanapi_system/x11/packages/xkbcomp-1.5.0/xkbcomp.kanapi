PACKAGE_NAME=xkbcomp
VER=1.5.0
#URL="http://xorg.freedesktop.org/releases/individual/app"
URL="https://gitlab.freedesktop.org/xorg/app/${PACKAGE_NAME}/-/archive/${PACKAGE_NAME}-${VER}"
EXT=tar.bz2
#build depends on xcb libXau

#LIB_DEPENDS="xcb xau"

. ../settings

pkg_download() {
	PACKAGE_PATH=${PACKAGE_NAME}-${PACKAGE_NAME}-${VER}.${EXT}
	pkg_curl
}

pkg_prepare() {
	if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ] 
	then 
		echo "$PACKAGE_NAME: already prepared"
	else
		pkg_tar_bz2		
		/bin/date > ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
	fi
	${LN_SNF} ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}-${PACKAGE_NAME}-${VER} ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}-${VER}
}

pkg_configure() {
#	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --with-xkb-config-root=`${PKG_CONFIG} --variable=xkb_base xkeyboard-config`  
    if [ -d build ] ; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} 
}

pkg_build() {
    meson compile -C build
}

pkg_check() {
	echo ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}-${PACKAGE_NAME}-${VER} 
	echo ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}-${VER}
}

pkg_install() {
	meson install -C build && pkg_install_pc_lib_all_only && pkg_install_bin
	ln -svf ${PREFIX}/bin/${PACKAGE_NAME} ${KANAPI_BASE}/xorg-server-${xorg_server_ver}/bin
}	

