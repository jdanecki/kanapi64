PACKAGE_NAME=libinput
VER=1.30.1
URL="https://gitlab.freedesktop.org/${PACKAGE_NAME}/${PACKAGE_NAME}/-/archive/${VER}/"
EXT=tar.bz2
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	if [ -d build ] ; then rm -r build ; fi
	mkdir -p build
	meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Dlibwacom=false -Ddebug-gui=false
}

pkg_check() {
    meson configure build
}

pkg_build() {
    meson compile -C build
}

pkg_install() {
	meson install -C build  && pkg_install_pc_all_only && pkg_install_libs && pkg_install_bin_all
}


