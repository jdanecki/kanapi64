PACKAGE_NAME=git
VER=2.52.0
URL="https://www.kernel.org/pub/software/scm/git"
EXT=tar.xz

#LIB_DEPENDS="zlib libcurl openssl libssh2"

. ../settings

export CFLAGS="${CFLAGS} ${GPG_ERROR_CFLAGS} ${LIBGCRYPT_CFLAGS} -I ${KANAPI_BASE}/gettext-${gettext_ver}/include"
export LDFLAGS="${LDFLAGS} ${GPG_ERROR_LDFLAGS} ${LIBGCRYPT_LDFLAGS} -L${KANAPI_BASE}/gettext-${gettext_ver}/lib -lgettextlib"
export NO_INSTALL_HARDLINKS=1

pkg_configure() {
	local_copy
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX 
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true && pkg_install_bin_all
}

pkg_check() {
	echo "CFLAGS=${CFLAGS}"
	echo "LDFLAGS=${LDFLAGS}"
	${PKG_CONFIG} --cflags ${LIB_DEPENDS}
	ls -l `which perl`
}
