PACKAGE_NAME=libxslt
VER=v1.1.45
URL="https://gitlab.gnome.org/GNOME/libxslt/-/archive/${VER}"
EXT=tar.bz2
#build depends on
#LIB_DEPENDS="libxml-2.0 zlib liblzma python-2.7"

. ../settings

#export LIBS="-lm `libgcrypt-config --libs` -lcrypt -lutil"
#export LDFLAGS="${LDFLAGS} `libgcrypt-config --libs` -lpthread"

pkg_configure() {
    export CMAKE_PREFIX_PATH=${KANAPI_BASE}/libxml2-${libxml2_ver}/lib/cmake
    cmake -G Ninja ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX}
}

pkg_build() {
	ninja
}

pkg_install() {
	ninja install && pkg_install_pc_all_only && pkg_install_bin_all && pkg_install_libs
}


