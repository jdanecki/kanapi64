PACKAGE_NAME=xf86-input-libinput
VER=1.5.0
URL="https://www.x.org/releases/individual/driver"
EXT=tar.xz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_install() {
	pkg_install_pc_all
	ln -svf ${PREFIX}/lib/xorg/modules/input/libinput_drv.so ${KANAPI_BASE}/xorg-server-${xorg_server_ver}/lib/xorg/modules/input
	ln -svf ${PREFIX}/share/X11/xorg.conf.d/40-libinput.conf ${KANAPI_BASE}/xorg-server-${xorg_server_ver}/share/X11/xorg.conf.d
}

