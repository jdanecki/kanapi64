PACKAGE_NAME=glslang
VER=16.1.0
URL="https://github.com/KhronosGroup/glslang/archive/refs/tags"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_PATH=${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
	local_copy
#	python3 update_glslang_sources.py
	cmake -G Ninja . -DCMAKE_INSTALL_PREFIX=${PREFIX} -Wno-dev -DENABLE_OPT=0
}

pkg_build() {
	cd build
	ninja
}

pkg_install() {
	cd build	
	ninja install &&  pkg_install_bin_all &&  pkg_install_libs
}
