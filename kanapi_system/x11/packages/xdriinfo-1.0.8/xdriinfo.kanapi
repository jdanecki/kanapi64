PACKAGE_NAME=xdriinfo
VER=1.0.8
URL="https://www.x.org/releases/individual/app"
EXT=tar.xz
#build depends on

LIB_DEPENDS="gl x11"
# expat xext xdamage xfixes x11-xcb x11 xcb-glx xcb-dri2 xcb-dri3 xcb-present xcb-randr xcb-xfixes xcb-render xcb-shape xcb-sync xcb xau xshmfence libdrm"

. ../settings

export GCC_PREFIX=${KANAPI_BASE}/gcc-${gcc_ver}
