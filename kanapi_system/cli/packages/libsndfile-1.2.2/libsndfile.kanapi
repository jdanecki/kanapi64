PACKAGE_NAME=libsndfile
VER=1.2.2
URL="https://github.com/${PACKAGE_NAME}/${PACKAGE_NAME}/releases/download/${VER}"
EXT=tar.xz
#build depends on
#LIB_DEPENDS="alsa"

. ../settings

#export LDFLAGS="${LDFLAGS} -lpthread -lm"
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	cmake -G Ninja ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX} \
		-D CMAKE_POLICY_VERSION_MINIMUM=3.5 \
		-D ENABLE_MPEG=OFF \
		-D BUILD_SHARED_LIBS=ON
}

pkg_build() {
	ninja -j ${MAKE_JOBS}
}

pkg_install() {
	ninja install && pkg_install_bin_all && pkg_install_libs && pkg_install_pc_all_only
}

