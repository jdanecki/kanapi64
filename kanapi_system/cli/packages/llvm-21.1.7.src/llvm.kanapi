PACKAGE_NAME=llvm
VER_NUM=21.1.7
VER=${VER_NUM}.src
URL="https://github.com/llvm/llvm-project/releases/download/llvmorg-${VER_NUM}"
EXT=tar.xz
#build depends on

. ../settings

export LD_LIBRARY_PATH=${KANAPI_BASE}/libs

pkg_download() {
  PACKAGE_PATH=llvm-project-${VER}.${EXT}
  pkg_curl
}

pkg_prepare() {
  if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ]; then
    echo "$PACKAGE_NAME: already prepared"
  else
    pkg_tar_xz
    ln -svf ${KANAPI_BUILD_SRC}/llvm-project-${VER} ${KANAPI_BUILD_SRC}/${PACKAGE_VER}
    #ln -svf ${PACKAGE_SRCDIR} ${KANAPI_BUILD_SRC}/llvm-${VER}/tools/clang
    /bin/date >${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
  fi
}

pkg_configure() {
  cmake -G Ninja ${PACKAGE_SRCDIR}/${PACKAGE_NAME} -DCMAKE_INSTALL_PREFIX=${PREFIX} -DCMAKE_C_COMPILER="${KANAPI_C_COMPILER}" \
    -DCMAKE_CXX_COMPILER="${KANAPI_CXX_COMPILER}" -DCMAKE_BUILD_TYPE=Release -DBUILD_SHARED_LIBS=ON \
    -DLLVM_TARGETS_TO_BUILD="X86" \
    -DLLVM_ENABLE_ZLIB=OFF -DLLVM_INCLUDE_DOCS=OFF -DLLVM_INCLUDE_EXAMPLES=OFF \
    -DLLVM_INCLUDE_TESTS=ON -DLLVM_INCLUDE_TOOLS=ON -DLLVM_INCLUDE_UTILS=ON \
    -DCMAKE_EXE_LINKER_FLAGS="-ldl -Wl,-rpath-link,${KANAPI_BASE}/gcc-${gcc_ver}/lib64"

  #	LLVM_TARGETS_TO_BUILD="AArch64,ARM,BPF,Hexagon,Mips,MSP430,NVPTX,PowerPC,Sparc,SystemZ,X86,XCore"
}

pkg_build() {
  if [ "${CI}" = "true" ]; then
    ninja -j 2
  else
    ninja -j ${MAKE_JOBS}
  fi
}

pkg_install() {
  ninja install && pkg_install_bin_all && pkg_install_libs
}

pkg_check() {
  gcc --version
  echo $PATH
  echo "KANAPI_C_COMPILER=${KANAPI_C_COMPILER}"
  echo "KANAPI_CXX_COMPILER=${KANAPI_CXX_COMPILER}"
  echo "CC=${CC}"
  echo "CXX=${CXX}"
}
