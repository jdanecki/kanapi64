PACKAGE_NAME=makefile2graph
VER=2021.11.06
URL="https://github.com/lindenb/makefile2graph/archive/refs/tags"
EXT="tar.gz"
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_FILENAME=${PACKAGE_NAME}-${VER}.${EXT}
	PACKAGE_PATH=${VER}.${EXT}
	
	pkg_curl
}

pkg_configure() {	
	local_copy
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} prefix=${PREFIX} CC="${KANAPI_C_COMPILER}"
}

pkg_install() {
	cd build
	pkg_install_make_bin_all
}

