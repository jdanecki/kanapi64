PACKAGE_NAME=man-db
VER=2.13.1
URL="https://mirror.marwan.ma/savannah/man-db"
EXT=tar.xz
#build depends on
#LIB_DEPENDS=""

. ../settings

pkg_configure() {
        ${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --enable-cache-owner=kanapi
}


pkg_install() {
	ln -svf ${REPO_BASE}/kanapi_system/scripts/update_man /bin
	pkg_install_make && pkg_install_bin_all
}

