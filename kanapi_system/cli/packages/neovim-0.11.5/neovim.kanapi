PACKAGE_NAME=neovim
VER=0.11.5
URL="https://github.com/neovim/neovim/archive/refs/tags"
EXT=tar.gz
#build depends on
#LIB_DEPENDS="libuv"

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
    PACKAGE_PATH="v${VER}.${EXT}"
    pkg_curl
}

pkg_configure() {
    local_copy
}

pkg_build() {
    cd build
    make CMAKE_EXTRA_FLAGS="-DCMAKE_INSTALL_PREFIX=${PREFIX}" CMAKE_TLS_VERIFY="0"
}

pkg_install() {
  cd build
  make install &&  pkg_install_bin_all
}


