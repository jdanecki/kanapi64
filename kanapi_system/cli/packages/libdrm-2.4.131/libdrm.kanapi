PACKAGE_NAME=libdrm
VER=2.4.131
URL="https://dri.freedesktop.org/libdrm"
EXT=tar.xz
#build depends on
. ../settings

pkg_configure() {
    if [ -d build ] ; then rm -r build; fi
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Damdgpu=disabled \
    -Dnouveau=disabled -Dtegra=disabled -Dradeon=disabled -Dvmwgfx=disabled
}

pkg_build() {   
    meson compile -C build
}

pkg_install() {
	meson install -C build && pkg_install_pc_all_only && pkg_install_libs
}

pkg_check() {
    meson configure build
}

