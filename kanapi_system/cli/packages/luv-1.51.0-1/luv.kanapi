PACKAGE_NAME=luv
VER=1.51.0-1
URL="https://github.com/luvit/luv/releases/download/${VER}"
EXT=tar.gz
#build depends on
LIB_DEPENDS="libuv"

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
    cmake -G Ninja ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX} \
	-DWITH_SHARED_LIBUV=ON \
	-DLUA_BUILD_TYPE=System \
	-DLUA=${KANAPI_BASE}/lua-${lua_ver}/bin/lua \
        -DLUA_LIBDIR=${KANAPI_BASE}/lua-${lua_ver}/lib \
        -DLIBDIR=${KANAPI_BASE}/lua-${lua_ver}/lib \
        -DLUADIR=${KANAPI_BASE}/lua-${lua_ver}/share \
 	-DLUA_INCDIR=${PREFIX}/include \
	-DBUILD_SHARED_LIBS=ON 
}

pkg_build() {
    ninja -j ${MAKE_JOBS}
}

pkg_install() { 
	ninja install 
	mkdir -p ${PREFIX}/lib/pkgconfig
	ln -svf ${KANAPI_BASE}/lua-${lua_ver}/lib/pkgconfig/libluv.pc ${PREFIX}/lib/pkgconfig/libluv.pc
	ln -svf ${KANAPI_BASE}/lua-${lua_ver}/lib/libluv.* ${PREFIX}/lib
	pkg_install_pc_lib_all_only && pkg_install_libs
}

pkg_check() {
	echo "lua_ver=${lua_ver}"
}
