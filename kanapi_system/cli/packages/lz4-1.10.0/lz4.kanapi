PACKAGE_NAME=lz4
VER=1.10.0
URL="https://github.com/lz4/lz4/releases/download/v${VER}"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	local_copy
}

pkg_build() {
	${MAKE} -C build -j ${MAKE_JOBS} PREFIX=${PREFIX} MAKEINFO=true
}

pkg_install() {
	mkdir -p ${PREFIX}
	${MAKE} -C build -j ${MAKE_JOBS} PREFIX=${PREFIX} install MAKEINFO=true && \
		pkg_install_bin_all && pkg_install_libs	&& pkg_install_pc_lib_all_only
}
