PACKAGE_NAME=SPIRV-LLVM-Translator
VER=21.1.3
URL="https://github.com/KhronosGroup/SPIRV-LLVM-Translator/archive/refs/tags"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_PATH=v${VER}.${EXT}
	pkg_curl	
}

pkg_configure() {
	local_copy
    	export CMAKE_PREFIX_PATH=${KANAPI_BASE}/llvm-${llvm_ver}/lib/cmake
	cmake -G Ninja .  -DCMAKE_INSTALL_PREFIX=${PREFIX} \
        -DCMAKE_BUILD_TYPE=Release -DCMAKE_POSITION_INDEPENDENT_CODE=ON
}

pkg_build() {
	cd build
	ninja
}


pkg_install() {
	cd build	
	ninja install && pkg_install_pc_all_only && pkg_install_libs && pkg_install_bin_all
}

