PACKAGE_NAME=librsvg
VER=2.40.23
URL="https://gitlab.gnome.org/GNOME/librsvg/-/archive/${PACKAGE_NAME}-gtk-${VER}/librsvg-librsvg-gtk-2.40.23.tar.bz2"
EXT=tar.bz2
#build depends on
. ../settings

pkg_download() {
        if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME} ]
        then
                echo "$PACKAGE_NAME: already downloaded"
        else
                echo "downloading ${PACKAGE_NAME}"
                wget ${URL} -O ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}
        fi
}

pkg_postprepare() {
    ${LN_SF} ${KANAPI_BUILD_SRC}/librsvg-${PACKAGE_NAME}-gtk-${VER} ${KANAPI_BUILD_SRC}/${PACKAGE_VER}
}

pkg_configure() {
    local_copy
    cp -v ../../../packages/${PACKAGE_VER}/Makefile.am Makefile.am
    cp -v ../../../packages/${PACKAGE_VER}/configure.ac configure.ac

    KANAPI_AC_SCRIPTS="-I ${KANAPI_BASE}/libtool-${libtool_ver}/share/aclocal \
        -I ${KANAPI_BASE}/autoconf-${autoconf_ver}/share/autoconf \
        -I ${KANAPI_BASE}/pkg-config-${pkg_config_ver}/share/aclocal"

    autoreconf --verbose --force --install ${KANAPI_AC_SCRIPTS}
	./configure --prefix=$PREFIX
}

pkg_build() {
    pkg_build_local
}

pkg_install() {
    cd build
	pkg_install_pc_all && pkg_install_bin_all && pkg_install_libs
}

