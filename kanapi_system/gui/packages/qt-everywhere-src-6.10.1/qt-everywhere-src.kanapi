PACKAGE_NAME=qt-everywhere-src
VER=6.10.1
URL="https://download.qt.io/official_releases/qt/6.10/6.10.1/single"
EXT=tar.xz
#build depends on

. ../settings

pkg_configure() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX  -opensource -confirm-license 
}

pkg_build() {
    cmake --build . --parallel
}

pkg_install() {
    cmake --install .  && pkg_install_pc_all_only && pkg_install_bin_all && pkg_install_libs
}

