PACKAGE_NAME=librsvg
VER=2.60.1
URL="https://gitlab.gnome.org/GNOME/${PACKAGE_NAME}/-/archive/${VER}"
EXT=tar.bz2
#build depends on
. ../settings

pkg_configure() {
    if [ -d build ]; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Dintrospection=disabled \
        -Ddocs=disabled -Dvala=disabled -Dtests=false 
}

pkg_build() {
    pkg_build_meson
}

pkg_install() {
    meson install -C build && pkg_install_pc_all && pkg_install_bin_all && pkg_install_libs
}

