PACKAGE_NAME=libepoxy
VER=1.5.10
#URL="https://github.com/anholt/libepoxy/releases/download/${VER}"
URL="https://github.com/anholt/libepoxy/archive/refs/tags"
EXT=tar.gz
#build depends on
. ../settings

export LDFLAGS="-Wl,-rpath-link,${KANAPI_BASE}/gcc-${gcc_ver}/lib64"

pkg_download() {
        PACKAGE_PATH=${VER}.${EXT}
        pkg_curl
}

pkg_configure() {
    if [ -d build ] ; then rm -r build ; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} 
#-Dtests=false
}

pkg_check() {
    meson configure build
}

pkg_build() {
    meson compile -C build
}

pkg_install() {
	meson install -C build  && pkg_install_pc_all_only && pkg_install_libs
}

