PACKAGE_NAME=dbus
VER=1.16.2
URL="https://dbus.freedesktop.org/releases/dbus"
EXT=tar.xz
#build depends on

#LIB_DEPENDS="expat gobject-2.0 x11 libffi xcb xau gmodule-2.0 zlib"

. ../settings

#export LDFLAGS="${LDFLAGS} -lrt -lpthread -lresolv -lm"
#export LIBS="${LDFLAGS}"

pkg_configure() {	
    if [ -d build ] ; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Dapparmor=disabled -Dlibaudit=disabled \
    -Dselinux=disabled -Dsystemd=disabled -Duser_session=false
	
#	--disable-selinux --disable-systemd --with-session-socket-dir=${PREFIX}/var \
#	--with-test-socket-dir=${PREFIX}/var --with-system-pid-file=${PREFIX}/var/pid \
#	--with-console-auth-dir=${PREFIX}/var --with-dbus-user=kanapi \
#	--with-dbus-daemondir=${PREFIX}/bin --with-x 
}

pkg_build() {
    meson compile -C build
}

pkg_install() {
    meson install -C build && pkg_install_pc_all_only && pkg_install_bin_all \
    && pkg_install_libs && dbus-uuidgen --ensure
}

pkg_check() {
	echo $CFLAGS
}
