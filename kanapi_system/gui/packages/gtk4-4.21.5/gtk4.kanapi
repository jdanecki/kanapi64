PACKAGE_NAME=gtk4
VER=4.21.5
URL="https://gitlab.gnome.org/GNOME/gtk/-/archive/4.21.5/gtk-4.21.5.tar.gz"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

export LDFLAGS="${LDFLAGS} -lm -lpthread -lstdc++"
#export CFLAGS="${CFLAGS} "

pkg_download() {
  PACKAGE_PATH=gtk-${VER}.${EXT}
  pkg_curl
}

pkg_postprepare() {
  ln -sf ${KANAPI_BUILD_SRC}/gtk-${VER} ${KANAPI_BUILD_SRC}/gtk4-${VER}
}

pkg_configure() {
  MESON_FLAGS="-Dvulkan=disabled -Dbuild-tests=false"
  pkg_configure_meson
}

pkg_build() {
  pkg_build_meson
}

pkg_install() {
  pkg_install_all_meson
}
