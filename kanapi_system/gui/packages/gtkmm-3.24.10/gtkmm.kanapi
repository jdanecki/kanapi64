PACKAGE_NAME=gtkmm
VER=3.24.10
URL="http://ftp.gnome.org/pub/GNOME/sources/gtkmm/3.24"
EXT=tar.xz
#build depends on
#LIB_DEPENDS=""

. ../settings

export PERL5LIB="${KANAPI_BASE}/XML-Parser-${XML_Parser_ver}/lib/site_perl/${perl_ver}"

pkg_configure() {
    if [ -d build ]; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Dbuild-documentation=false \
        -Dbuild-demos=false -Dbuild-tests=false \
        -Dsigc++-2.0:build-documentation=false \
        -Dsigc++-2.0:build-manual=false \
        -Dsigc++-2.0:build-examples=false \
        -Dsigc++-2.0:build-tests=false \
        -Dcairomm-1.0:build-documentation=false \
        -Dcairomm-1.0:build-examples=false \
        -Dcairomm-1.0:build-tests=false \
        -Dglibmm-2.4:build-documentation=false \
        -Dglibmm-2.4:build-examples=false \
        -Dpangomm-1.4:build-documentation=false \
        -Datkmm-1.6:build-documentation=false 

}

pkg_build() {
    pkg_build_meson
}

pkg_install() {
    meson install -C build && pkg_install_pc_all_only && pkg_install_libs
}

