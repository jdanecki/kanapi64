PACKAGE_NAME=gdk-pixbuf
VER=2.44.4
URL=" http://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/2.44"
EXT=tar.xz
#build depends on

#LIB_DEPENDS="gmodule-2.0 gobject-2.0 libffi"

. ../settings

#export LDFLAGS="${LDFLAGS} -L${KANAPI_BASE}/jpegsrc-${jpegsrc_ver}/lib"
#export CFLAGS="${CFLAGS} -I${KANAPI_BASE}/jpegsrc-${jpegsrc_ver}/include"
#export CPP="${KANAPI_C_COMPILER} -E ${CFLAGS}"

pkg_configure() {
    if [ -d build ] ; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Dandroid=disabled -Dglycin=disabled \
	-Dinstalled_tests=false -Dman=false -Dtests=false 
}

pkg_build() {
    meson compile -C build
}

pkg_install() {
    meson install -C build
	pkg_install_bin_all && pkg_install_libs && pkg_install_pc_lib_all_only
    meson install -C build
}

pkg_check() {
    meson configure build
}


