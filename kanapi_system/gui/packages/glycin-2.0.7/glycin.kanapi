PACKAGE_NAME=glycin
VER=2.0.7
URL="https://gitlab.gnome.org/GNOME/${PACKAGE_NAME}/-/archive/${VER}"
EXT=tar.bz2
#build depends on
#LIB_DEPENDS=""

#requires rusts

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
    if [ -d build ] ; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR}
}

pkg_build() {
    meson compile -C build
}

pkg_install() {
    meson install -C build
#	pkg_install_make && pkg_install_bin_all
}

