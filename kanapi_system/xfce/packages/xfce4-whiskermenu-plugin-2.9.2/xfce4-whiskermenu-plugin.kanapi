PACKAGE_NAME=xfce4-whiskermenu-plugin
VER=2.9.2
URL="https://archive.xfce.org/src/panel-plugins/xfce4-whiskermenu-plugin/2.9"
EXT=tar.bz2
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
  CMAKE_FLAGS="-DENABLE_ACCOUNTS_SERVICE=OFF -DENABLE_GTK_LAYER_SHELL=OFF"
  pkg_configure_cmake
}

pkg_build() {
  pkg_build_cmake
}

pkg_install() {
  ninja install && pkg_install_bin_all && pkg_install_libs
}

pkg_check() {
  cmake ${PACKAGE_SRCDIR} -LAH
}
