PACKAGE_NAME=xfce4-terminal
VER=1.1.5
URL="https://archive.xfce.org/src/apps/xfce4-terminal/1.1"
EXT=tar.xz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
  local_copy
  patch -p1 <../../../packages/${PACKAGE_NAME}-${VER}/0001-add-doc-in-meson_options.txt.patch
  meson setup --prefix $PREFIX build . -Ddoc=false
}

pkg_build() {
  cd build
  pkg_build_meson
}

pkg_install() {
  cd build
  pkg_install_all_meson
}
