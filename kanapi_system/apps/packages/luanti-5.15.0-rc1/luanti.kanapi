PACKAGE_NAME=luanti
VER=5.15.0-rc1
URL="https://github.com/luanti-org/luanti/archive/refs/tags"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "
pkg_download() {
  PACKAGE_PATH=${VER}.${EXT}
  pkg_curl
}

pkg_configure() {
  JPEG=$(${PKG_CONFIG} --variable=prefix libjpeg)
  ZLIB=$(${PKG_CONFIG} --variable=prefix zlib)
  PNG_INCLUDE=$(${PKG_CONFIG} --variable=includedir libpng)
  PNG_LIBDIR=$(${PKG_CONFIG} --variable=libdir libpng)
  GL=$(${PKG_CONFIG} --variable=prefix gl)
  SDL2=$(${PKG_CONFIG} --variable=prefix sdl2)
  cmake ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX} -DCMAKE_BUILD_TYPE=Release \
    -DOPENGL_gl_LIBRARY="${GL}/lib/libGL.so" \
    -DOPENGL_INCLUDE_DIR="${GL}/include" \
    -DCMAKE_C_FLAGS="${CFLAGS} ${LDFLAGS}" \
    -DCMAKE_CXX_FLAGS="${CFLAGS} ${LDFLAGS}" \
    -DJPEG_LIBRARY=${JPEG}/lib/libjpeg.so -DJPEG_INCLUDE_DIR=${JPEG}/include \
    -DPNG_LIBRARY=${PNG_LIBDIR}/libpng16.so -DPNG_PNG_INCLUDE_DIR=${PNG_INCLUDE} \
    -DZLIB_LIBRARY=${ZLIB}/lib/libz.so -DZLIB_INCLUDE_DIR=${ZLIB}/include \
    -DSDL2_DIR=${SDL2}/lib/cmake/SDL2
}

pkg_install() {
  pkg_install_make && pkg_install_bin_all
}
