PACKAGE_NAME=physfs
VER=3.2.0
URL="https://github.com/icculus/physfs/archive/refs/tags"
EXT=tar.gz
#build depends on
LIB_DEPENDS="zlib ncurses"

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_PATH=release-${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
	mv ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}-release-${VER} ${PACKAGE_SRCDIR}
	cmake -G Ninja ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX} -DCMAKE_BUILD_TYPE=Release -D CMAKE_POLICY_VERSION_MINIMUM=3.5 
}

pkg_build() {
	ninja -j ${MAKE_JOBS}
}

pkg_install() {
	ninja install && pkg_install_libs && pkg_install_bin_all && pkg_install_pc_all_only
}


