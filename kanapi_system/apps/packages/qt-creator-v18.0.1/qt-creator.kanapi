PACKAGE_NAME=qt-creator
VER=v18.0.1
URL="https://code.qt.io/qt-creator"
EXT=git
#build depends on
. ../settings

pkg_download() {
	pkg_git_clone
}

pkg_prepare() {
	echo "nothing to do"
}

pkg_configure() {	
	local_clone
    mkdir build
    cd build 
    export CMAKE_PREFIX_PATH=${KANAPI_BASE}/qt-everywhere-src-${qt_everywhere_src_ver}/lib/cmake
    cmake ..  -DCMAKE_INSTALL_PREFIX=${PREFIX} -DQT_NO_PRIVATE_MODULE_WARNING=ON \
        -DBUILD_EXECUTABLE_CMDBRIDGE=OFF
}

pkg_build() {
	${MAKE} -C build/build -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
	${MAKE} -C build/build -j ${MAKE_JOBS} install
	pkg_install_bin_all
}


