PACKAGE_NAME=json-glib
VER=1.10.8
URL="https://gitlab.gnome.org/GNOME/${PACKAGE_NAME}/-/archive/${VER}"
EXT=tar.bz2

. ../settings


pkg_configure() {
    if [ -d build ]; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Dintrospection=disabled \
    -Ddocumentation=disabled -Dtests=false -Dconformance=false \
    -Dinstalled_tests=false
}

pkg_build() {
    pkg_build_meson
}

pkg_install() {
    meson install -C build && pkg_install_pc_lib_all_only && pkg_install_libs && pkg_install_bin_all
}

