PACKAGE_NAME=gvim
VER=9.1.2028
URL="https://github.com/vim/vim/archive/refs/tags"
EXT=tar.gz
#build depends on

LIB_DEPENDS="ncursesw"

. ../settings

export CFLAGS="${NCURSES_CFLAGS} -O2"
export CPPFLAGS=${CFLAGS}

pkg_download() {
	PACKAGE_PATH=v${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
    PACKAGE_SRCDIR=${KANAPI_BUILD_SRC}/vim-${VER}
	local_copy
	./configure --prefix=$PREFIX --with-local-dir=${PREFIX} --with-x --enable-gui=gtk3 \
        --disable-selinux
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true
#	pkg_install_bin_all
	for i in eview evim gview gvim gvimdiff gvimtutor rgview rgvim rvim 
	do
		${LN_SF} ${PREFIX}/bin/$i /bin
	done
#	patchelf --set-rpath /kanapi_0.8/i686/packages/pango-1.30.1/lib ${PREFIX}/bin/vim
}

pkg_check() {
	echo "PACKAGE_SRCDIR=${PACKAGE_SRCDIR}"
	echo "CFLAGS=${CFLAGS}"
	echo "LDFLAGS=${LDFLAGS}"
	echo "KANAPI_VER=${KANAPI_VER}"
	${PKG_CONFIG} --libs ${LIB_DEPENDS}
    echo 
}

