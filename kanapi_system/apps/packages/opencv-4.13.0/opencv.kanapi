PACKAGE_NAME=opencv
VER=4.13.0
URL="https://github.com/opencv/opencv/archive"
EXT=zip
#build depends on
#LIB_DEPENDS=""

. ../settings

pkg_download() {
	PACKAGE_PATH=${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
        cmake -G Ninja ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX} -DCMAKE_BUILD_TYPE=Release \
	-DBUILD_EXAMPLES=OFF -DINSTALL_TESTS=OFF -DOPENCV_GENERATE_PKGCONFIG=ON -DOPENCV_ENABLE_NONFREE=ON
}

pkg_build() {
	ninja
}

pkg_install() {
	ninja install && pkg_install_bin_all && pkg_install_libs 
    ${LN_SF} ${KANAPI_BASE}/${PACKAGE_VER}/lib64/pkgconfig/opencv4.pc ${KANAPI_BASE}/${PACKAGE_VER}/lib64/pkgconfig/opencv.pc 
    pkg_install_pc_all_only
}

