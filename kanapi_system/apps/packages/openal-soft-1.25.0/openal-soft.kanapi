PACKAGE_NAME=openal-soft
VER=1.25.0
URL="https://github.com/kcat/openal-soft/archive/refs/tags"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

export CMAKE_PREFIX_PATH=${KANAPI_BASE}/qt-everywhere-opensource-src-${qt_everywhere_opensource_src_ver}/lib/cmake

pkg_download() {
	PACKAGE_PATH=${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
	cmake -G Ninja ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX} -DCMAKE_BUILD_TYPE=Release -DCMAKE_EXE_LINKER_FLAGS="-lstdc++"
}

pkg_build() {
	ninja -j ${MAKE_JOBS}
}

pkg_install() {
	ninja install && pkg_install_libs && pkg_install_bin_all && pkg_install_pc_all_only
}

pkg_check() {
    echo $CMAKE_MODULE_PATH
}
