PACKAGE_NAME=gexiv2
VER=0.16.0
URL="https://gitlab.gnome.org/GNOME/gexiv2/-/archive/${VER}"
EXT=tar.bz2
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	MESON_OPTIONS="-Dintrospection=false -Dvapi=false -Dpython3=false"
	pkg_configure_meson
}

pkg_build() {
	pkg_build_meson
}

pkg_install() {
	cd build && ninja install && pkg_install_bin_all && pkg_install_libs
	ln -svf ${PREFIX}/lib/pkgconfig/${PACKAGE_NAME}-0.16.pc ${PREFIX}/lib/pkgconfig/${PACKAGE_NAME}.pc
	pkg_install_pc_all_only  
}

