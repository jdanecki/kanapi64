PACKAGE_NAME=poppler
VER=26.02.0
URL="https://poppler.freedesktop.org"
EXT=tar.xz
#build depends on
# LIB_DEPENDS="zlib libpng fontconfig freetype2 expat xau pixman-1 xcb-shm xcb-render xcb xrender x11 xext xinerama \
# 	xrandr xcursor xi xdamage xfixes epoxy pangoft2 harfbuzz gthread-2.0 ice gmodule-2.0 libffi"

. ../settings

# export LDFLAGS="${LDFLAGS} -L${KANAPI_BASE}/jpegsrc-${jpegsrc_ver}/lib -ljpeg -lresolv -lrt -lpthread -lm"
# export CFLAGS="${CFLAGS} -I${KANAPI_BASE}/jpegsrc-${jpegsrc_ver}/include"
# export CXXFLAGS="${CFLAGS} -std=c++11"

pkg_configure() {
  CMAKE_FLAGS="-DENABLE_NSS3=off -DENABLE_GPGME=off -DENABLE_QT5=off -DENABLE_BOOST=off -DENABLE_LIBOPENJPEG=none"
  export CMAKE_PREFIX_PATH=${KANAPI_BASE}/qt-everywhere-src-${qt_everywhere_src_ver}/lib/cmake
  pkg_configure_cmake
}

pkg_build() {
  pkg_build_cmake
}

pkg_install() {
  mkdir -p $PREFIX/include/poppler
  cp ${PACKAGE_SRCDIR}/poppler/*.h $PREFIX/include/poppler
  cp poppler/poppler-config.h $PREFIX/include
  cp poppler_private_export.h $PREFIX/include
  mkdir -p $PREFIX/include/goo
  cp ${PACKAGE_SRCDIR}/goo/*.h $PREFIX/include/goo
  pkg_install_all_cmake
}

pkg_check() {
  echo "LDFLAGS=${LDFLAGS}"
}
