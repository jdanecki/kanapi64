PACKAGE_NAME=gimp
VER=3.1.4
URL="https://download.gimp.org/mirror/pub/gimp/v3.1"
EXT=tar.xz
#build depends on

LIB_DEPENDS="gexiv2"

. ../settings

export PERL5LIB="${KANAPI_BASE}/XML-Parser-${XML_Parser_ver}/lib/site_perl/${perl_ver}"
export LDFLAGS="${LDFLAGS} -lstdc++"


pkg_configure() {
    if [ -d build ]; then rm -r build; fi
    mkdir -p build
    meson setup --prefix $PREFIX build ${PACKAGE_SRCDIR} -Dwin32-debug-console=disabled \
	-Dcheck-update=no -Dgi-docgen=disabled -Dvala=disabled -Djavascript=disabled \
	-Denable-console-bin=false -Dheadless-tests=disabled -Dvector-icons=false
}

pkg_build() {
	pkg_build_meson
}

pkg_install() {
	meson install -C build  &&
	pkg_install_pc_all_only &&
	pkg_install_bin_all &&
	pkg_install_libs
}

