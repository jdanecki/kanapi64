PACKAGE_NAME=xsel
VER=1.2.1
URL="https://github.com/kfish/xsel/archive/refs/tags"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
  PACKAGE_PATH=${VER}.${EXT}
  pkg_curl
}

pkg_configure() {
  local_copy
  export ACLOCAL_PATH=${KANAPI_BASE}/pkg-config-${pkg_config_ver}/share/aclocal
  ./autogen.sh
  ./configure --prefix=${PREFIX}
}

pkg_build() {
  cd build
  ${MAKE} -j ${MAKE_JOBS} PREFIX=${PREFIX}
}

pkg_install() {
  cd build && pkg_install_make && pkg_install_bin_all
}
