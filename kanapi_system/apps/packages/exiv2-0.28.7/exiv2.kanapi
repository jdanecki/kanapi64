PACKAGE_NAME=exiv2
VER=0.28.7
URL="https://github.com/Exiv2/exiv2/archive/refs/tags"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_PATH=v${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
	pkg_configure_meson
}

pkg_build() {
	pkg_build_meson
}

pkg_install() {
	cd build && ninja install && pkg_install_pc_all_only && pkg_install_bin_all && pkg_install_libs
}

