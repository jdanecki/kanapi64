PACKAGE_NAME=media-driver
VER=intel-media-25.3.4
URL="https://github.com/intel/media-driver/archive/refs/tags"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings
#MAKE_JOBS=1
#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_PATH=${VER}.${EXT}
	pkg_curl
    ${LN_SF} ${KANAPI_BUILD_SRC}/${VER}.${EXT} ${KANAPI_BUILD_SRC}/${PACKAGE_VER}
}

pkg_configure() {
	cmake ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX} -DCMAKE_BUILD_TYPE=Release \
        -Wno-dev -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
        -DGEN8=OFF -DGEN9=ON -DGEN11=OFF \
        -DGEN9_CMPV=ON -DGEN12=OFF -DXe_M=OFF -DXe2_M_plus=OFF \
        -DDG2=OFF -DXE_HPG=OFF -DXEHP_SDV=OFF -DPVC=OFF -DMTL=OFF -DARL=OFF -DBMG=OFF \
        -DLNL=OFF -DPTL=OFF -DMEDIA_BUILD_FATAL_WARNINGS=OFF
}

pkg_install() {
	pkg_install_make && pkg_install_pc_all_only && pkg_install_libs
}

pkg_check() {
    echo "CXXFLAGS=${CXXFLAGS}"
}
